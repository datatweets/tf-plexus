# Region and Zone
# region = "us-central1"
# zone   = "us-central1-a"

# VPC Configuration
# vpc_name = "plexus-prod-vpc"

# Compute Configuration
# web_server_count = 3        # Number of web servers (production default)
# machine_type     = "e2-medium"  # Larger instances for production

# Database Configuration
# database_tier            = "db-g1-small"  # Production-grade database
# enable_database_backups  = true           # Always enable in production
# database_backup_hour     = 3              # 3 AM backup time

# Feature Flags
# enable_load_balancer = true  # Required for high availability
# enable_database      = true  # Required for stateful apps
# enable_storage       = true  # Required for file storage

